{
    "compilerOptions": {
      "sourceMap": true,
      "target": "esnext",
      "module": "CommonJS",
      "outDir": "./backend",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "noImplicitAny": false,
      "importHelpers": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "types": [
        "node",
        "jest"
      ],
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.ts",
      "**/test/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "backend"
    ]
  }